{
  "expo": {
    "name": "MileTracker Pro",
    "slug": "miletracker-pro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app-icon-512.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./adaptive-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.miletrackerpro.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "RECEIVE_BOOT_COMPLETED",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./app-icon-192.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos for receipt capture."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location for automatic mileage tracking.",
          "locationAlwaysPermission": "Allow $(PRODUCT_NAME) to use your location for automatic mileage tracking even when the app is closed.",
          "locationWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location for automatic mileage tracking.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "react-native-background-geolocation",
        {
          "license": "FREE"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "18ccbc9a-e560-4d1f-a221-a2fab6f8a24a"
      }
    }
  }
}
