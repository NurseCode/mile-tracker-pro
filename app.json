{
  "expo": {
    "name": "MileTracker Pro",
    "slug": "miletracker-pro",
    "version": "20.5.0",
    "orientation": "portrait",
    "icon": "./adaptive-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./adaptive-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./adaptive-icon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow MileTracker Pro to use your location for automatic trip tracking."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow MileTracker Pro to access photos for receipt capture.",
          "cameraPermission": "Allow MileTracker Pro to access camera for receipt capture."
        }
      ],
      [
        "expo-gradle-ext-vars",
        {
          "googlePlayServicesLocationVersion": "21.0.1",
          "repositories": [
            "https://maven.transistorsoft.com/releases"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "18ccbc9a-e560-4d1f-a221-a2fab6f8a24a"
      }
    },
    "owner": "nursecates",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/18ccbc9a-e560-4d1f-a221-a2fab6f8a24a"
    }
  }
}
